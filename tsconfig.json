{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": false,
    "types": [
      "node",
      "chrome",
      "golang-wasm-exec"
    ],
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@tokenizer": [
        "packages/tokenizer"
      ],
      "@jq": [
        "packages/jq"
      ]
    }
  },
  "include": [
    "packages/**/*ts",
    "packages/*.d.ts",
    "src/**/*.ts",
    "src/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}
