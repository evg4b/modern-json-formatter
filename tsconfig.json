{
  "compilerOptions": {
    "target": "es2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": false,
    "module": "esnext",
    "types": [
      "node",
      "chrome",
      "golang-wasm-exec"
    ],
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "sourceRoot": ".",
    "strictNullChecks": false,
    "paths": {
      "@packages/*": ["packages/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.ext.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
