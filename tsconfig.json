{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": false,
    "types": [
      "node",
      "chrome",
      "golang-wasm-exec"
    ],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@tokenizer/*": [
        "packages/tokenizer/*"
      ],
      "@tokenizer": [
        "packages/tokenizer"
      ],
      "@jq/*": [
        "packages/jq/"
      ],
      "@jq": [
        "packages/jq"
      ]
    }
  },
  "include": [
    "packages/tokenizer/**/*.ts",
    "packages/jq/**/*.ts",
    "src/**/*.ts",

    "packages/tokenizer/**/types.d.ts",
    "packages/jq/**/types.d.ts",
    "src/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}
