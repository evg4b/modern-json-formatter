{
  "compilerOptions": {
    "target": "es2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": false,
    "module": "esnext",
    "types": ["node", "chrome", "golang-wasm-exec"],
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "sourceRoot": ".",
    "strictNullChecks": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@testing/*": ["testing/*"],
      "@testing": ["testing"],
      "@worker-core": ["worker-core"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.ext.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
