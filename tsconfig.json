{
  "compilerOptions": {
    "target": "es2020",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "allowJs": false,
    "types": [
      "node",
      "chrome",
      "golang-wasm-exec"
    ],
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@tokenizer": [
        "packages/tokenizer"
      ],
      "@jq": [
        "packages/jq"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.ext.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
