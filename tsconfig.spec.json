{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": false,
    "types": ["jest", "node", "golang-wasm-exec"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@tokenizer": [
        "packages/tokenizer"
      ],
      "@jq": [
        "packages/jq"
      ]
    }
  },
  "include": [
    "packages/**/*ts",
    "packages/*.d.ts",
    "src/**/*.ts",
    "src/types.d.ts",
    "testing/**/*.ts",
    "node_modules/@types/chrome/index.d.ts"
  ]
}
